{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/doriangrey/Desktop/coding/tierarztspiel",
        "/Users/doriangrey/Desktop",
        "/Users/doriangrey/Documents"
      ]
    },
    
    "blender": {
      "command": "uvx",
      "args": ["blender-mcp"],
      "_comment": "3D Pipeline für Bello Model - KRITISCH für Medical Visualizations"
    },
    
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "_comment": "Auto-Commits nach jeder Änderung - siehe CLAUDE.md Rules"
    },
    
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "ghp_REPLACE_WITH_YOUR_TOKEN"
      },
      "_comment": "GitHub Actions für Auto-Deployment zu vibecoding.company"
    },
    
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "_comment": "Aktuelle Three.js/React Docs - verhindert CDN Fehler"
    },
    
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "_comment": "Speichert Versionsnummern und Projektkontext"
    },
    
    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "_comment": "Testing der Live-Version auf vibecoding.company"
    }
  },
  
  "_project": "VetScan Pro 3000 - Tierarztspiel",
  "_version": "7.0.2",
  "_deployment": "https://vibecoding.company",
  "_priority_notes": {
    "critical": ["filesystem", "git", "blender"],
    "important": ["github", "context7"],
    "optional": ["memory", "fetch"]
  },
  
  "_setup_instructions": [
    "1. GitHub Token generieren: GitHub → Settings → Developer Settings → Personal Access Tokens",
    "2. Token in GITHUB_PERSONAL_ACCESS_TOKEN einfügen",
    "3. Diese Datei kopieren nach: ~/Library/Application Support/Claude/claude_desktop_config.json",
    "4. Claude Desktop komplett neu starten",
    "5. Hammer-Icon im Chat verifiziert erfolgreiche Aktivierung"
  ]
}